<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.AdminViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Tab text="Users" closable="false">
        <TableView fx:id="userView" GridPane.columnIndex="0"
                   GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="u_typeField" text="ID"/>
                <TableColumn fx:id="u_titleField" text="Title"/>
                <TableColumn fx:id="u_usernameField" text="Username"/>
                <TableColumn fx:id="u_nameField" text="Name"/>
                <TableColumn fx:id="u_emailField" text="Email"/>
                <TableColumn fx:id="u_addressField" text="Address"/>
            </columns>
        </TableView>
    </Tab>

    <Tab text="Water Source Reports" closable="false">
        <TableView fx:id="sourceView" GridPane.columnIndex="0"
                   GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="s_idField" text="ID"/>
                <TableColumn fx:id="s_usernameField" text="Username"/>
                <TableColumn fx:id="s_dateField" text="Date"/>
                <TableColumn fx:id="s_hourField" text="Hour"/>
                <TableColumn fx:id="s_minuteField" text="Minute"/>
                <TableColumn fx:id="s_latitudeField" text="Latitude"/>
                <TableColumn fx:id="s_longitudeField" text="Longitude"/>
                <TableColumn fx:id="s_typeField" text="Type"/>
                <TableColumn fx:id="s_conditionField" text="Condition"/>
            </columns>
        </TableView>
    </Tab>

    <Tab text="Water Quality Reports" closable="false">
        <TableView fx:id="qualityView" GridPane.columnIndex="0"
                   GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="q_idField" text="ID"/>
                <TableColumn fx:id="q_usernameField" text="Username"/>
                <TableColumn fx:id="q_dateField" text="Date"/>
                <TableColumn fx:id="q_hourField" text="Hour"/>
                <TableColumn fx:id="q_minuteField" text="Minute"/>
                <TableColumn fx:id="q_latitudeField" text="Latitude"/>
                <TableColumn fx:id="q_longitudeField" text="Longitude"/>
                <TableColumn fx:id="q_virusField" text="Type"/>
                <TableColumn fx:id="q_contaminantField" text="Type"/>
                <TableColumn fx:id="q_conditionField" text="Condition"/>
            </columns>
        </TableView>
    </Tab>
</TabPane>