<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="25" vgap="10"
          fx:controller="controller.SourceReportController">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Fill in Report Information"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" GridPane.halignment="center"/>
    <Label text="Date:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="right"/>

    <DatePicker fx:id="dateField"
               GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

    <Label text="Time:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="right"/>

    <ChoiceBox fx:id="timeHourField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text=":"
               GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <ChoiceBox fx:id="timeMinuteField"
               GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Label text="Latitude:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="right"/>

    <TextField fx:id="latitudeField"
                   GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>

    <Label text="Longitude:"
           GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="right"/>

    <TextField fx:id="longitudeField"
               GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3"/>

    <Label text="Type:"
           GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="right"/>

    <ChoiceBox fx:id="typeField"
                   GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3"/>

    <Label text="Condition:"
           GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="right"/>

    <ChoiceBox fx:id="conditionField"
                   GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="3"/>

    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" GridPane.columnIndex="0"
              GridPane.rowIndex="7" GridPane.columnSpan="4">
        <Button text="Submit" fx:id="submitBtn"
                onMouseClicked="#submit"
                GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Cancel" fx:id="CancelBtn"
                onMouseClicked="#cancel"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>
</GridPane>