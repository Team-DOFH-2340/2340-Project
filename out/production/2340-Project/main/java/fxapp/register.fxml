<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="25" vgap="10"
          fx:controller="main.java.controller.RegistrationController">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Please fill in your information."
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="center"/>
    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="right"/>
    <TextField fx:id="nameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="User Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="right"/>
    <TextField fx:id="usernameField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="right"/>
    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <ChoiceBox fx:id="userTypeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" GridPane.columnIndex="0"
              GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button text="Register" fx:id="register"
                onMouseClicked="#register"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>
</GridPane>